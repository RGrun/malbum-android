<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="guru.furu.malbum_android" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".activities.LoginActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".activities.TabbedGalleryActivity" />

        <activity android:name=".activities.SingleUserAlbumActivity"
            android:parentActivityName=".activities.TabbedGalleryActivity">

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.TabbedGalleryActivity" />

        </activity>
        <activity android:name=".activities.PhotoPageActivity"
            android:parentActivityName=".activities.TabbedGalleryActivity">

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.TabbedGalleryActivity" />

        </activity>

    </application>

</manifest>
